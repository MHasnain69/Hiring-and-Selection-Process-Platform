@model Hiring_and_Selection_Process_Platform.Models.Candidates

@{
    ViewData["Title"] = "Create Candidate";
}


<h4>Candidates</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateCandidate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="candidateName" class="control-label"></label>
                <input asp-for="candidateName" class="form-control" />
                <span asp-validation-for="candidateName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="candidateEmail" class="control-label"></label>
                <input asp-for="candidateEmail" class="form-control" />
                <span asp-validation-for="candidateEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="candidateContact" class="control-label"></label>
                <input asp-for="candidateContact" class="form-control" />
                <span asp-validation-for="candidateContact" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="candidateAge" class="control-label"></label>
                <input asp-for="candidateAge" class="form-control" />
                <span asp-validation-for="candidateAge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Job">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
